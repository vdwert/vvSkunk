@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "Shared/_Layout.cshtml";
}
<div class="content">
    <h1>@Model.GetPropertyValue("title")</h1>
    <br />
    <h4>Waar: @Model.GetPropertyValue("location")</h4>
    <h4>Wanneer: @DateTime.Parse(Model.GetPropertyValue("dateTime").ToString()).ToString("dddd d MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"))</h4>
    <h4>Hoelaat: @DateTime.Parse(Model.GetPropertyValue("dateTime").ToString()).ToString("HH:mm", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"))</h4>
    <br />
    @Html.Raw(Model.GetPropertyValue("content"))
</div>
